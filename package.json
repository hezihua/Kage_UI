{
  "name": "kage-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Kage UI Monorepo - Component library and icon package",
  "scripts": {
    "dev": "pnpm --filter kage-ui start",
    "build": "pnpm --filter './packages/*' build",
    "build:ui": "pnpm --filter kage-ui build",
    "build:icon": "pnpm --filter kage-icon build",
    "docs:dev": "pnpm --filter kage-ui start",
    "docs:build": "pnpm --filter kage-ui docs:build",
    "lint": "pnpm --filter './packages/*' lint",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "release:ui": "pnpm --filter kage-ui publish",
    "release:icon": "pnpm --filter kage-icon publish",
    "clean": "pnpm --filter './packages/*' clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  }
}